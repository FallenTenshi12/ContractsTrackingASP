@using ContractsTracking.Utility.Models;
@model IEnumerable<Problem>
@{
    ViewData["Title"] = "Settings";
}

<h2>Settings</h2>

<div>
    <div class="modal-dialog"></div>
    <input type="button" id="AddBtn" value="Add" />
    <div id="modalOption"></div>
    <table class="table table-sm table-striped table-hover border-bottom">
        <thead>
            <tr>
                <th class="d-none d-lg-table-cell">
                    Problem Name
                </th>
                <th>
                    Default Group to Assign
                </th>
                <th>
                    Location
                </th>
                <th></th> <!--This is so that the bottom border for the headers goes across the Edit/Delete buttons-->
            </tr>
        </thead>
        <tbody>
            @foreach (Problem problem in Model)
            {
                <tr>
                    <td class="d-none d-lg-table-cell">
                        @problem.problemName
                    </td>
                    <td>
                        @problem.defaultGroup
                    </td>
                    <td>
                        @problem.location
                    </td>
                    <td>
                        <button type="button" onclick="location.href = '@Url.Action("UpdateProblemLabel","Home", new { problemID = @problem.problemName })'">Edit</button>
                        |
                        <input type="button" value="Delete" id="DelBtn" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="modal" id="edit-modal">
    <div class="modal-content">
        <div class="modal-header">
            <a class="close" data-dismiss="modal">&times;</a>
            <h3>Title of the form</h3>
        </div>
        <div class="modal-body">
            <p>Body of the form</p>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal">Close</a>
            <a href="#" class="btn btn-primary">Save Changes</a>
        </div>
    </div>
</div>